#customsection='@CUSTOM_%s\n  %g\n %s\n %g %g %g %g %g'% ( "SANSND", 
#                                        version,
#                                        "GP",
#                                        A,s,rg,m,p)
#                                        A1,b1,A2,b2,Q0 )

customsection='@CUSTOM_%s\n  %g\n %s'% ( "SANSND", 
                                       version,
                                        "teshi_xs")
                      
#customsection='@CUSTOM_%s\n  %g\n %s\n %g'% ( "SANSND", 
#                                       version,
#                                        "NP-FBA",
#                                        2)

NC.registerInMemoryFileData('stdDiamond.ncmat', dummyal)
NC.registerInMemoryFileData('customDiamond.ncmat', dummyal+customsection)

######################################################################
#
# Create physics model with/without our custom replacement 
#
sc_std = NC.createScatter("stdDiamond.ncmat")
#sc_std_incelas_only = NC.createScatter("stdDiamond.ncmat;inelas=0;coh_elas=0")
sc_plugin = NC.createScatter("customDiamond.ncmat")
#sc_plugin_incelas_only = NC.createScatter("customDiamond.ncmat;inelas=0;coh_elas=0")
######################################################################
#
# Plot with matplotlib:
#
#wls = np.linspace(0.01,10.0,1000)
plt.figure(num='Benchmark')
energies = np.logspace(-5,1,10000)
xs =  sc_plugin.crossSectionNonOriented(energies)
xs_std = sc_std.crossSectionNonOriented(energies)
plt.plot(energies, xs_std, label="Standard NCrystal",color="tab:green")
plt.plot(energies, xs, label="NCrystal+Plugin", color="tab:orange")
#plt.plot( wls, sc_std_incelas_only.xsect(wl=wls), label='Standard NCrystal [only inc. elas.]' )
#plt.plot( wls, sc_plugin_incelas_only.xsect(wl=wls), label='With new plugin [only inc. elas.]' )

######################################################################
#
# Also access and plot our plugin's C++ class "PhysicsModel" directly via our
# custom python hooks, without going through the standard NCrystal
# infrastructure:
#
#pm = ncplugin.PhysicsModel( A1=A1, b1=b1, A2=A2, b2=b2, Q0=Q0, sigma0=sigma0)
#plt.plot(ekins, pm.calcCrossSection(ekins),
#         ls=':',lw=1, color='dimgray',label='Only SANS')

######################################################################
teshi_data = pandas.read_csv("/home/nicorizzi/ncplugin-SANSND/testcode/data/teshi.dat", sep=" ")
vesuvio_data = pandas.read_csv("/home/nicorizzi/ncplugin-SANSND/testcode/data/vesuvio.dat", sep=" ")
njoy_data = pandas.read_csv("/home/nicorizzi/ncplugin-SANSND/testcode/data/njoy_calc.txt", sep=" ")
plt.scatter(teshi_data["E"],teshi_data["xs"], s=15, facecolors='none', edgecolors='r', label='Teshigawara at al. [2019]')
plt.scatter(vesuvio_data["E"],vesuvio_data["xs"],s=15, facecolors='none', edgecolors='g',label='VESUVIO exp. [2019]')
plt.scatter(njoy_data["E"],njoy_data["xs"],s=15, facecolors='none', edgecolors='b',label='Granada et al. [2020]')

plt.xlabel('Energy (eV)')
plt.ylabel('Total Cross Section (barn)')
plt.legend()
plt.grid(which='both', linestyle=':')
plt.loglog()

## RESIDUAL PLOT
plt.figure(num='Residual')
#plt.step( ekins,(sc_plugin.xsect(ekins) - sc_std.xsect(ekins))/sc_std.xsect(ekins), where='mid',lw=1,label='With SANS' )
plt.step( teshi_data["E"], (teshi_data["xs"]-sc_plugin.xsect(wl=NC.ekin2wl(teshi_data["E"])))/sc_plugin.xsect(wl=NC.ekin2wl(teshi_data["E"])), where='mid',color='r',lw=1,label='Teshigawara et al.')
plt.step( vesuvio_data["E"], (vesuvio_data["xs"] - sc_plugin.xsect(wl=NC.ekin2wl(vesuvio_data["E"])))/sc_plugin.xsect(wl=NC.ekin2wl(vesuvio_data["E"])), lw=1, color='g', where='mid',label='VESUVIO exp' )
plt.step( njoy_data["E"],(njoy_data["xs"] - sc_plugin.xsect(wl=NC.ekin2wl(njoy_data["E"])))/sc_plugin.xsect(wl=NC.ekin2wl(njoy_data["E"])), where='mid',lw=1,color='b', label='Granada et al.' )

 
plt.xlabel('Energy (eV)')
plt.ylabel('')

plt.title('Residual Total Cross Section relative to NCrystal+SANS')
plt.legend()
plt.grid(which='both', linestyle=':')
plt.xscale('log')


plt.show()

